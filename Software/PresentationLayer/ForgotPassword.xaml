<Window x:Class="PresentationLayer.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer"
        mc:Ignorable="d"
        Title="ForgotPassword" Height="450" Width="800">
    <Grid Background="LightGray">
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top">
            <Hyperlink x:Name="btnBack" Foreground="LightGray" Click="btnBack_Click"><Image Source="/Images/back.png" Height="30" Margin="10"></Image></Hyperlink>
        </TextBlock>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" KeyDown="StackPanel_KeyDown">
            <Image Source="/Images/logo.png" Height="100"></Image>
            <Label x:Name="labelEmail" Content="Email" Margin="5" HorizontalAlignment="Center"/>
            <TextBox x:Name="txtEmail" Margin="5,0,5,0" Width="200"/>
            <Button x:Name="btnSend" Margin="0,25,0,0" HorizontalAlignment="Center" Padding="40,4,40,4" Content="Send" Click="btnSend_Click"/>
        </StackPanel>
    </Grid>
</Window>
